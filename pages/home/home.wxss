/* pages/home/home.wxss */

page {
  background-color: #f1f1f1;
}

.main {
  width: 95%;
  height: 100%;
  margin: 0 auto;
  
}
.main>image{
  position: absolute;
  width: 95%;
  height: 100%;
  z-index: -1;
}

.top {
  position: relative;
  margin-top: 8rpx;
  height: 40%;
}

.top image {
  height: 100%;
}
/* 设置轮播图界面始终占界面的40% */

.swiper {
  display: absolute;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  border-radius: 8rpx;
  box-sizing: border-box;
  /* 关键属性 */
  transform: translateY(0); 
  /* 可以简单调整圆点位置 */
  line-height: 1rpx;  
}
.scroll{
  height: 100%;
}
/*  页面css添加下边样式 */
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
    display:none;
}

.center {
  margin-top: 10rpx;
  width: 100%;
}

.center_up {
  background-image: linear-gradient(1deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%);
  position: relative;
  width: 100%;
  height: 50%;
  margin-top: 30rpx;
  border-radius: 10rpx;
}

.center_dowm {
  position: relative;
  background-image: linear-gradient(45deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%);
  width: 100%;
  height: 50%;
  margin-top: 30rpx;
  border-radius: 10rpx;
  /* 阴影 */
  box-shadow: 0px 5px 5px -3px rgb(0 0 0 / 20%), 0px 8px 10px 1px rgb(0 0 0 / 14%), 0px 3px 14px 2px rgb(0 0 0 / 12%);
}

.center_up_title {
  font-family: 'blod';
  font-size: 24px;
  font-weight: 200;
  margin: 10rpx;
  margin-bottom: 20rpx;
  color: #ef5862;
  text-align: center;
}

.center_up_content {
  margin: 12rpx;
  font-family: 'Arial, Helvetica, sans-serif';
  font-size: 31rpx;
}

.center_dowm_title {
  /* font-family: 'Courier New', Courier, monospace; */
  font-family: 'blod';
  font-size: 24px;
  font-weight: 200;
  margin: 10rpx;
  margin-bottom: 20rpx;
  color: #ef5862;
  text-align: center;
}

.center_dowm_content {
  margin: 12rpx;
  font-family: 'Arial, Helvetica, sans-serif';
  font-size: 31rpx;
}

.code {
  color: #c7254e;
  background-color: #f9f2f4;
  border-radius: 2px;
  padding: 2px 4px;
  font-family: Monaco;
}

.botton {}

/* 底部版权声明 */

.footer {
  position: absolute;
  margin-top: 30rpx;
  left: 50%;
  transform: translate(-50%, 0);
  text-align: center;
}

.footerImage {
  display: inline-block;
  margin-right: 12rpx;
}

.footerImage image {
  width: 30rpx;
  height: 30rpx;
}

.footerTitle {
  display: inline-block;
  font-family: 'blod';
  font-size: 30rpx;
  padding-bottom: 20rpx;
  text-align: center;
  color: rgb(95, 94, 94);
}