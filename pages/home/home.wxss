/* pages/home/home.wxss */

page {
  background-color: #edece8;
}

.main {
  width: 95%;
  height: 100%;
  margin: 0 auto;
}

.top {
  position: relative;
  margin-top: 8rpx;
  height: 40%;
}

.top image {
  border-radius: 8rpx;
  height: 100%;
}
/* 设置轮播图界面始终占界面的40% */

.swiper {
  display: absolute;
  width: 100%;
  height: 400rpx;
}
.scroll{
  height: 100%;
}

.center {
  margin-top: 10rpx;
  width: 100%;
}

.center_up {
  background-image: linear-gradient(1deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%);
  position: relative;
  width: 100%;
  height: 50%;
  margin-top: 5rpx;
  border-radius: 10rpx;
}

.center_dowm {
  position: relative;
  background-image: linear-gradient(45deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%);
  width: 100%;
  height: 50%;
  border-radius: 10rpx;
}

.center_up_title {
  font-family: 'Courier New', Courier, monospace;
  font-size: 22px;
  font-weight: 200;
  margin: 10rpx;
  margin-bottom: 20rpx;
  color: white;
  text-align: center;
}

.center_up_content {
  margin: 4rpx;
  font-family: 'Arial, Helvetica, sans-serif';
}

.center_dowm_title {
  font-family: 'Courier New', Courier, monospace;
  font-size: 22px;
  font-weight: 200;
  margin: 10rpx;
  margin-bottom: 20rpx;
  color: white;
  text-align: center;
}

.center_dowm_content {
  margin: 4rpx;
  font-family: 'Arial, Helvetica, sans-serif';
}

.code {
  color: #c7254e;
  background-color: #f9f2f4;
  border-radius: 2px;
  padding: 2px 4px;
  font-family: Monaco;
}

.botton {}

/* 底部版权声明 */

.footer {
  position: absolute;
  margin-top: 30rpx;
  left: 50%;
  transform: translate(-50%, 0);
  text-align: center;
}

.footerImage {
  display: inline-block;
  margin-right: 12rpx;
}

.footerImage image {
  width: 30rpx;
  height: 30rpx;
}

.footerTitle {
  color: rgb(95, 94, 94);
  display: inline-block;
  font-family: 'blod';
  font-size: 30rpx;
  padding-bottom: 20rpx;
  text-align: center;
}