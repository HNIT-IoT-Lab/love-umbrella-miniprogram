}
.center{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.center_title{
  font-family: 'blod';
  font-size: large;
  font-weight: 100;
  margin: 20rpx;
  color: rgb(95, 94, 94);
}
.center_item{
    width:30.5%;
    display:flex;
