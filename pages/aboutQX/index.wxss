/**index.wxss**/

page {
  background-color: #f1f1f1;
}

.main {
  width: 95%;
  height: 100%;
  margin: 0 auto;
  
}
.main>image{
  position: absolute;
  width: 95%;
  height: 100%;
  z-index: -1;
}

.top {
  position: relative;
  margin-top: 8rpx;
  height: 40%;
}

.top image {
  height: 100%;
}

.swiper {
  display: absolute;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  border-radius: 8rpx;
  box-sizing: border-box;
  /* 关键属性 */
  transform: translateY(0); 
  /* 可以简单调整圆点位置 */
  line-height: 1rpx;  
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/* swiper图片适应 */
swiper{
  width: 100%;
  height: calc(150 vm * 5616 / 3744);
}
image{
  width: 100%;
}
.menueview{
  display:flex;
  background-color:#FFF;
  padding:5px 0
}
.menue-image{
  flex:1;
  height:50px;
  height:auto
}
.separator{
 height: 4px;
 width:20rem;
