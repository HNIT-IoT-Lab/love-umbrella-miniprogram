<!--index.wxml-->
<view>
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for-items="{{banner_list[0].banner}}" wx:key="*this">
      <swiper-item>
        <image src="{{item.pic_url}}" mode="widthFix" />
      </swiper-item>
    </block>
  </swiper>
  <view>
    <view class='menueview'>
      <block wx:for-items="{{banner_list[1].banner}}" wx:key="*this">
        <image src="{{item.pic_url}}" class="menue-image" />
      </block>
    </view>
  </view>
  <view class='separator'></view>
  <view class='floortitle'>
    <view class='floortitlemoreicon myfont01'>计算机青协志愿活动</view>
    <view class='floortitlemoretext'>更多特色活动> </view>
  </view>
  <view class='hotgoodcontainer'>
    <view class='gooditem' wx:for="{{hotgoods}}" wx:for-index="idx" wx:for-item="good" wx:key="*this">
      <view class='imgview'>
        <image class='productimg' src='{{good.pic_url}}' />
      </view>
      <view>{{good.name}}</view>
    </view>
  </view>
  <view>
  </view>
</view>
<view class="bottom">
  <view class="foot">
    如果你也想参加我们计算机青协的活动
  </view>
  <view class="foot">你可以志愿活动页面中报名参加</view>
  <view class="foot">期待和你一起参加志愿活动</view>
</view>