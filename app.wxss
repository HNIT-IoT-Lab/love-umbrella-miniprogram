/**app.wxss**/
/* 全局引入微信组件的样式 */
@import  './miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';
/* icon */
@import "./styles/iconfont.wxss";
@import "./styles/activity.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 在微信小程序中不支持 '*' 通配符，所以需要写所有的标签来消除内边距 */
page,view,text,swiper,swiper-item,image,navigator{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 主题颜色 */
page{
  --themeColor:#eb4450;
  /* 统一字体大小  1px=2rpx */
  font-size: 28rpx;
}
